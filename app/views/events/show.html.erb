<h2><%= @event.name %></h2>
<ul class="nav nav-tabs event-options">

  <% @event.sections.each_with_index  do |section, i| %>
  <% css_class = i == 1 ? 'class="active"'  : '' %>


  <li <%= css_class %>><a data-toggle="tab" href="#<%= i %>"><%= section.title %></a></li>
  <% end %>
  <li><a data-toggle="tab" href="#where-when"><%= t 'where_when' %></a></li>
  <li><a data-toggle="tab" href="#rsvp">RSVP</a></li>
</ul>

<div class="tab-content">

  <% @event.sections.each_with_index  do |section, i| %>
  <% css_class = i == 1 ? ' fade in active'  : '' %>
    <div id="<%= i %>" class="tab-pane <%= css_class %>">
      <%= section.content %>
    </div>
  <% end %>
  <div id="where-when" class="tab-pane fade">
    <img src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @event.location.gsub(/\s+/, '+') %>&zoom=17&size=600x300&maptype=roadmap
&markers=color:blue%7Clabel:S%7C<%= @event.latitude %>,<%= @event.longitude %>" />
  </div>
  <div id="rsvp" class="tab-pane fade">
    <%= render  "/guests/options_form" %>
  </div>
</div>






