<h3>Guest List</h3>
<div class="row">
  <div class="col-md-6">
    <%= render  "new_guests" %>
  </div>
  <div class="col-md-6">
    <%= simple_format t 'guests.hint' %>
  </div>
  <div class="col-md-6">
    <%= link_to t('guests.send_invitations'),  send_invitations_path,
        method: 'post', remote: true, class: 'btn btn-primary' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div id="guest-list">
      <% if @event.guests.count > 0 %>

        <%= render  "guests_list" %>
      <% end %>
    </div>
  </div>
</div>
