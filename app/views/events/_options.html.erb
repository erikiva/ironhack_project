<h3><%=  t 'events.main.guest_options' %></h3>
<div class="row">
  <div class="col-md-12">
    <div class="bg-success"><%= simple_format (t 'rsvp_options.hint') %></div>
  </div>
  <div class="col-md-12">
    <%= render 'rsvp_options/form' %>
  </div>
</div>

<div class="row">
  <div class="list-unstyled col-md-12 sortable" id="options">
    <% @event.rsvp_options.each do |option| %>
        <%= render partial: 'rsvp_options/form', locals: {rsvp_option: option} %>
    <% end %>
  </div>
</div>
